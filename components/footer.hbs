<footer class="container-fluid mt-5 bg-dark text-light">
  <section class="row mt-3 mb-3">
      {{#with global.footer}}
	    <div class="col-lg-6 py-2">
	      <div class="row justify-content-center">
	        <div class="col-11 col-md-7 col-lg-12 col-xl-10 color d-flex justify-content-center align-items-center myheight">
            <div>
              <h4 class="text-center">{{titel}}</h4>
              <p><i class="{{iconEmail}}"></i> {{email}}</p>
            </div>
	        </div>
	      </div>
	    </div>
	    <div class="col-lg-6 py-2 ">
	      <div class="row justify-content-center">
	        <div class="col-11 col-md-7 col-lg-12 col-xl-10 d-flex justify-content-center align-items-center myheight">
	          <div>
              <h4>Adress</h4>
              <p>{{adressCity}}</p>
              <p>{{adressStreet}}</p>
              <p><i class="{{iconPhone}}"></i> {{phone}}</p>
	          </div>
	        </div>
	      </div>
	    </div>
      {{/with}}
	  </section>
</footer>
