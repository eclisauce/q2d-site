<!DOCTYPE html>
<html>
{{>head}}

<body>
  {{>header}}
  <main>
    <div class="container">
      <div class="row">
        {{#with workshop}}
          <section class="col-12">
            <h1 class="mt-2 mb-3 text-center">{{heading}}</h1>
            <p>{{text}}</p>
            {{#each workshopJumbotron}}
              <div class="row mt-2">
                <div class="jumbotron col-lg-10 col-12 mx-auto m-2 p-1 text-light" id="{{workshopJumbotronId}}" style="background-image: url(/assets/img/{{image}});">
                  <h1 class="">{{title}}</h1>
                  <p class="">{{textOne}}</p>
                  <p class="">{{textTwo}}</p>
                  <!-- <p class="lead"> -->
                  <a class="btn btn-info btn-lg m-1 text-center" href="{{link}}" role="button">{{linkText}}</a>
                  <!-- </p> -->
                </div>
              </div>
            {{/each}}
          </section>
        {{/with}}

      </div>
    </div>

  </main>


  {{>footer}} {{>scripts}}
</body>

</html>
