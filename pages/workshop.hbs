<!DOCTYPE html>
<html>
	{{>head}}
	<body>
    {{>header}}
		<main>
      <div class="container">
				<div class="row">
					{{#with workshop}}
					<section class="col-12">
						<h1 class="mt-2 mb-3">{{heading}}</h1>
						{{#each workshopJumbotron}}
						<div class="row mt-2">
						<div class="jumbotron-fluid m-2 p-2 text-light" id="{{workshopJumbotronId}}" style="background-image: url(/assets/img/{{image}});">
						  <h1 class="display-4">{{title}}</h1>
						  <p class="lead">{{textOne}}</p>
						  <p>{{textTwo}}</p>
						  <!-- <p class="lead"> -->
						    <a class="btn btn-primary btn-lg m-2 text-center" href="{{link}}" role="button">{{linkText}}</a>
						  <!-- </p> -->
						</div>
						</div>
						{{/each}}
					</section>
					{{/with}}

				</div>
      </div>

		</main>


		{{>footer}}
		{{>scripts}}
	</body>

</html>
