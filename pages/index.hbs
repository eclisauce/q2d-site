<!DOCTYPE html>
<html>
{{>head}}

<body>
  {{>header}}
  <main>
    <div class="container">
      <div class="row">
        <div class="col-12">
          {{#with first_part}}
            <h1 class="mt-2">{{header}}</h1>
            <section>
              <div class="card-deck mt-4">
                {{#each cards}}
                  <div class="card border-0">
                    <h2 class="text-center">{{header}}</h2>
                    <img class="card-img-top img-fluid" src="/assets/img/{{image}}" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title">{{title}}</h5>
                      <p class="card-text">{{text}}</p>
                      <a href="{{link}}" class="btn btn-primary">{{linkText}}</a>
                    </div>
                  </div>
                {{/each}}
              </div>
            </section>
          {{/with}}
          <div class="row">
            {{#with second_part}}
              <h1 class="text-center mb-2 mt-2">{{header}}</h1>
              <section class="mt-4 p-1">
                <div class="card-deck">
                  {{#each cards}}
                    <div class="card border-0 " id="workshopCards">
                      <img class="card-img-top img-fluid" src="/assets/img/{{image}}" alt="Card image cap">
                      <div class="card-body">
                        <h4 class="card-title">{{title}}</h4>
                        <p class="card-text">{{text}}</p>
                      </div>
                      <div class="card-footer border-0">
                        <a href="{{link}}" class="btn btn-primary">{{linkText}}</a>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </section>
            {{/with}}
          </div>
          <div class="row">
            {{#with third_part}}
              <section>
                <h2 class="mt-5 display-5">{{header}}</h2>
                {{#each items}}
                  <h4 class="mt-3">{{heading}}</h4>
                  <ul>
                    <div class="card border-0 float-right col-4 d-none d-md-block" id="part_three-card">
                      <img class="img-fluid" id="part_three-img" src="/assets/img/{{image}}" alt="">
                    </div>
                    {{#each texts}}
                      <li>{{text}}</li>
                    {{/each}}
                  </ul>
                {{/each}}
                <!-- </section>
					<section class="col-12"> -->
                {{#each itemsTwo}}
                  <h4>{{heading}}</h4>
                  {{#each texts}}
                    <p>{{text}}</p>
                  {{/each}}
                {{/each}}
              </section>
            {{/with}}
          </div>
        </div>
      </div>
    </div>
  </main>
  {{>footer}} {{>scripts}}
</body>

</html>